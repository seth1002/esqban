package jTASE;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

public class Database
{
	private static final String strConnection = "jdbc:mysql://192.168.2.106:3306/tase";
	private static final String strUsername = "sqba";
	private static final String strPassword = "crl2688";

	public void test_mysql() throws Exception
	{
		Class.forName("com.mysql.jdbc.Driver");
		
		Connection con = DriverManager.getConnection(strConnection, strUsername, strPassword);
		
		PreparedStatement statement = con.prepareStatement("select * from companies");
		
		ResultSet result = statement.executeQuery();
		
		while( result.next() )
		{
			System.out.println(result.getString(1) + " " + result.getString(2) + " " + result.getString(3) + " " + result.getString(4));
		}
	}
}
